@model IEnumerable<RroleApp.Areas.Hero.Models.HeroOpt>

@{
    ViewBag.Title = "Index";

}
<link rel="stylesheet" href="~/Content/Style.css">
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RoleInGame)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="td_class">
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoleInGame)
        </td>
        @if (ViewContext.HttpContext.User.IsInRole("Admin"))
        {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.HeroOptId }) |
                @Html.ActionLink("Details", "Details", new { id = item.HeroOptId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.HeroOptId })
            </td>
        }

    </tr>
}

</table>
